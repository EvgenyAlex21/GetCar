<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_add_car_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Марка -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="🚗 Марка *"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#2196F3"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="#2196F3"
            app:hintAnimationEnabled="true"
            app:expandedHintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="🚗 Марка *"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Модель -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="🚘 Модель *"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#2196F3"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="#2196F3"
            app:hintAnimationEnabled="true"
            app:expandedHintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="🚘 Модель *"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Госномер -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="🔢 Госномер *"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#2196F3"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="#2196F3"
            app:hintAnimationEnabled="true"
            app:expandedHintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLicensePlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="🔢 Госномер *"
                android:inputType="textCapCharacters"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Тип автомобиля -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCarType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="📦 Тип автомобиля *"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#2196F3"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="#2196F3"
            app:hintAnimationEnabled="true"
            app:expandedHintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/spinnerCarType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="📦 Тип автомобиля *"
                android:inputType="none"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Год -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="📅 Год *"
                android:layout_marginEnd="4dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#2196F3"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="#2196F3"
                app:hintAnimationEnabled="true"
                app:expandedHintEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="📅 Год *"
                    android:inputType="number"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Цвет -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="🎨 Цвет *"
                android:layout_marginStart="4dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#2196F3"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="#2196F3"
                app:hintAnimationEnabled="true"
                app:expandedHintEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinnerColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="🎨 Цвет *"
                    android:inputType="none"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Цена/час -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="💰 Цена/час (₽) *"
                android:layout_marginEnd="4dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#2196F3"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="#2196F3"
                app:hintAnimationEnabled="true"
                app:expandedHintEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPricePerHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="💰 Цена/час (₽) *"
                    android:inputType="numberDecimal"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Расход -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="⛽ Расход л/100км *"
                android:layout_marginStart="4dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#2196F3"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="#2196F3"
                app:hintAnimationEnabled="true"
                app:expandedHintEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFuelConsumption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="⛽ Расход л/100км *"
                    android:inputType="numberDecimal"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Цена/день -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="💵 Цена/день (₽) *"
                android:layout_marginEnd="4dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#2196F3"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="#2196F3"
                app:hintAnimationEnabled="true"
                app:expandedHintEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPricePerDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="💵 Цена/день (₽) *"
                    android:inputType="numberDecimal"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Места -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="👥 Мест *"
                android:layout_marginStart="4dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#2196F3"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="#2196F3"
                app:hintAnimationEnabled="true"
                app:expandedHintEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSeats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="👥 Мест *"
                    android:inputType="number"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Уровень топлива -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="⛽ Уровень топлива (%) *"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#2196F3"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="#2196F3"
            app:hintAnimationEnabled="true"
            app:expandedHintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFuelLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="⛽ Уровень топлива (%) *"
                android:inputType="numberDecimal"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Местоположение -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="📍 Местоположение (город, адрес)"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#2196F3"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="#2196F3"
            app:hintAnimationEnabled="true"
            app:expandedHintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="📍 Местоположение (город, адрес)"
                android:inputType="text"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddCar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ДОБАВИТЬ"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/primary_blue"
                android:textColor="@color/white"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="ОТМЕНА"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/warning_red"
                android:textColor="@color/white"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>