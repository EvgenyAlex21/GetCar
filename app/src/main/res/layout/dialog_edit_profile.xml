<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Редактировать профиль"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Аватарка пользователя -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_default_profile"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle_avatar"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Аватар профиля" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@id/ivProfileImage"
            android:layout_alignEnd="@id/ivProfileImage"
            android:src="@drawable/ic_camera"
            android:background="@drawable/bg_circle_camera"
            android:padding="6dp"
            android:elevation="4dp"
            android:contentDescription="Изменить фото" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажмите на фото для изменения"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Имя -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="👤 Имя *"
        app:boxBackgroundColor="#FFFFFF"
        app:boxStrokeColor="#2196F3"
        app:boxStrokeWidth="2dp"
        app:hintTextColor="#2196F3"
        app:hintAnimationEnabled="true"
        app:expandedHintEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="👤 Имя *"
            android:inputType="textPersonName"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E"
            android:textSize="16sp"
            android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Телефон -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="📱 Телефон *"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="#FFFFFF"
        app:boxStrokeColor="#2196F3"
        app:boxStrokeWidth="2dp"
        app:hintTextColor="#2196F3"
        app:hintAnimationEnabled="true"
        app:expandedHintEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="📱 Телефон *"
            android:inputType="phone"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E"
            android:textSize="16sp"
            android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Водительское удостоверение -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="🪪 Водительское удостоверение *"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="#FFFFFF"
        app:boxStrokeColor="#2196F3"
        app:boxStrokeWidth="2dp"
        app:hintTextColor="#2196F3"
        app:hintAnimationEnabled="true"
        app:expandedHintEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDriverLicense"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="🪪 Водительское удостоверение *"
            android:inputType="number"
            android:maxLength="10"
            android:padding="16dp"
            android:textColor="#212121"
            android:textColorHint="#9E9E9E"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Сохранить"
            android:textSize="13sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary_blue"
            android:textColor="@color/white"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Отмена"
            android:textSize="13sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/warning_red"
            android:textColor="@color/white"
            app:cornerRadius="12dp" />

    </LinearLayout>
</LinearLayout>
</ScrollView>
